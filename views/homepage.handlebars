<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class=" mb-4 project">
  <div >
    <h2>
      <a href="/posts/{{post.id}}">{{post.post_title}}</a>
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.date_posted}}</p>
  </div>
  <div >
    <p>
      {{post.post_content}}
    </p>
  </div>
</div>
{{/each}}
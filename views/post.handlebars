<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      {{post.post_title}}
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.date_posted}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.post_content}}
    </p>
  </div>
</div>
<div>
  <h3>Comments</h3>
  {{#each comments as |comment|}}
  <div>
  <h6>{{comment.user.username}} on {{format_date comment.date_posted}}</h6>
  <p>{{comment.comment_content}}</p>
</div>
{{/each}}
</div>
